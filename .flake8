[flake8]
# required by black
max-line-length = 88
ignore = E203, E266, E501, W503, F403, F401
select = B,C,E,F,W,T4,B9
per-file-ignores =
    __init__.py:F401
exclude =
    .git,
    __pycache__,
    setup.py,
    build,
    dist,
    releases,
    .venv,
    .tox,
    .mypy_cache,
    .pytest_cache,
    .vscode,
    .github,
    tests,
    .history

docstring-convention = google
